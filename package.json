{
  "version": "1.0.4",
  "name": "@thebespokepixel/es-tinycolor",
  "description": "Fast Color Parsing and Manipulation in es2015+, based on TinyColor2",
  "scripts": {
    "test": "xo && nyc ava",
    "doc-serve": "documentation serve --watch --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "doc-build": "documentation build --format html --output docs --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/es-tinycolor.git"
  },
  "keywords": [
    "color",
    "parser",
    "tinycolor2",
    "es6"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "copyright": {
    "year": "2019",
    "owner": "The Bespoke Pixel"
  },
  "contributors": [
    "Brian Grinstead <briangrinstead@gmail.com> (http://briangrinstead.com)"
  ],
  "main": "index.js",
  "module": "index.mjs",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/es-tinycolor"
  },
  "homepage": "https://github.com/MarkGriffiths/es-tinycolor",
  "files": [
    "index.js",
    "index.mjs"
  ],
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "ava": "^1.2.1",
    "documentation-theme-bespoke": "^0.5.2",
    "gulp": "^4.0.0",
    "gulp-better-rollup": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "nyc": "^13.3.0",
    "rollup-plugin-babel": "^4.3.2",
    "xo": "^0.24.0"
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index*.js",
      "lib/**",
      "docs/**"
    ],
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "one-var": 0,
      "max-params": 0
    }
  },
  "badges": {
    "github": "MarkGriffiths",
    "npm": "thebespokepixel",
    "name": "es-tinycolor",
    "codeclimate": "fbe4afd7bf57c41a0e06",
    "providers": {
      "aux1": {
        "title": "github",
        "text": "source",
        "color": "4E73B6",
        "link": "https://github.com/MarkGriffiths/es-tinycolor"
      }
    },
    "readme": {
      "Status": [
        [
          "npm",
          "travis",
          "david"
        ],
        [
          "code-climate",
          "code-climate-coverage",
          "snyk"
        ]
      ],
      "Developer": [
        "greenkeeper",
        "david-dev",
        "rollup"
      ],
      "Help": [
        "inch",
        "gitter"
      ]
    },
    "docs": [
      [
        "aux1",
        "travis"
      ],
      [
        "code-climate",
        "code-climate-coverage"
      ],
      [
        "david"
      ]
    ]
  }
}
