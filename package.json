{
  "version": "0.3.1",
  "name": "@thebespokepixel/es-tinycolor",
  "description": "Fast Color Parsing and Manipulation in es2015+, based on TinyColor2",
  "scripts": {
    "test": "xo && nyc ava",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/es-tinycolor.git"
  },
  "keywords": [
    "color",
    "parser",
    "tinycolor2",
    "es6"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "copyright": {
    "year": "2018",
    "owner": "The Bespoke Pixel"
  },
  "contributors": [
    "Brian Grinstead <briangrinstead@gmail.com> (http://briangrinstead.com)"
  ],
  "main": "index.js",
  "module": "index.mjs",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/es-tinycolor"
  },
  "homepage": "https://github.com/MarkGriffiths/es-tinycolor",
  "files": [
    "index.js",
    "index.mjs"
  ],
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "ava": "^1.2.1",
    "gulp": "^4.0.0",
    "gulp-better-rollup": "^3.4.0",
    "gulp-rename": "^1.4.0",
    "nyc": "^13.2.0",
    "rollup-plugin-babel": "^4.3.2",
    "xo": "^0.24.0"
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index*.js",
      "lib/**",
      "docs/**"
    ],
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "one-var": 0,
      "max-params": 0
    }
  }
}